provider "aws" {
  region = "{{ region }}"
  assume_role {
    role_arn     = "{{ assume_role_arn }}"
    session_name = "netdevops-pipeline"
  }
}

terraform {
  required_version = ">=1.6"
  required_providers {
    aws = {
      source  = "hashicorp/aws"
      version = ">=5.0"
    }
  }
  backend "s3" {
    bucket         = "{{ bucket }}"
    key            = "{{ key }}"
    region         = "{{ region }}"
    kms_key_id     = "{{ kms_key_id }}"
    use_lockfile = true
    encrypt = true
  }
}








